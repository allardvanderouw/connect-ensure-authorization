{
  "name": "connect-ensure-authorization",
  "version": "0.0.1",
  "description": "User authorization ensuring middleware for Connect for API's.",
  "main": "./lib",
  "repository": "https://allardvanderouw@github.com/allardvanderouw/connect-ensure-authorization.git",
  "keywords": [
    "auth",
    "authorization",
    "authn",
    "connect",
    "express",
    "passport"
  ],
  "bugs": {
    "url": "https://github.com/allardvanderouw/connect-ensure-authorization/issues"
  },
  "author": "Allard van der Ouw <allard.van.der.ouw@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint lib",
    "test": "rimraf coverage && yarn run lint && yarn run test:unit && yarn run test:integration && yarn run test:coverage",
    "test:coverage": "mkdir -p coverage/all && cp coverage/*/*.json coverage/all && nyc report --temp-directory=coverage/all --reporter html --reporter text && nyc check-coverage --temp-directory=coverage/all",
    "test:integration": "nyc --all --temp-directory=coverage/integration --reporter=text-summary mocha --timeout=10000 --reporter=spec $(find test -name '*.integration.test.js')",
    "test:unit": "nyc --all --temp-directory=coverage/unit --reporter=text-summary mocha --reporter=spec $(find test -name '*.unit.test.js')",
    "test:unit:watch": "mocha --watch --growl --reporter=min $(find test -name '*.unit.test.js')",
    "nyc:test": "nyc mocha test/index.js",
    "nyc:report": "nyc report --reporter=text-lcov > coverage.lcov ./node_modules/.bin/codecov",
    "report:coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "devDependencies": {
    "body-parser": "^1.18.3",
    "codecov": "^3.0.4",
    "connect-ensure-authenticated": "^1.0.1",
    "cookie-parser": "^1.4.3",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.13.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "sinon": "^6.1.5",
    "supertest": "^3.1.0"
  },
  "dependencies": {}
}
